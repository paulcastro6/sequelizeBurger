<div class="container-fluid">
	<div>
		<h1>EAT THE BURGER OF YOUR CHOICE</h1>
	</div>
	<div class="row">
		<div class="col-md-6">
			<h3>Your Burger!!!</h3>
			{{#each burger_data}}
				{{#unless this.devoured}}
			<div class="burgers">
				<div>
					<div class="yourBurger">{{this.id}}, {{this.burger_name}}</div>
				</div>
			</div>
			<div class="devourBtn">
				<form method="POST" action="/update?_method=POST">
					<input type="hidden" type="text" name="id" value= {{this.id}}></input>
					<button type="submit" class="btn btn-default">DEVOUR DA BURGER!</button>
				</form>
			</div>
			{{/unless}}
			{{/each}}	
		</div>
		<div class="col-md-6">
			<h3>Devoured</h3>
			{{#each burger_data}}
				{{#if this.devoured}}
			<div class="burgers">
				<div>
					<div class="yourBurger">{{this.id}}, {{this.burger_name}}</div>
				</div>
			</div>
				{{/if}}
			{{/each}}
		</div>
	</div>
	<div class=row>
    <div class="col-md-12">
      <form action="/create" method="POST">
        <input placeholder="Enter Burger Name Here!" name="burger_name"></input><br>
        <button type="submit" id="addBurger" class="btn btn-success">Add Your Burger!</button>
      </form>
    </div>
  </div>
</div>